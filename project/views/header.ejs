<form id="loginWindow" class="pane" action="/api/user/login" method="POST" onsubmit=" event.preventDefault(); loginUser();">
    <div class="w3-container">
      <% if (autheticated) { %>
        <div>
          <h2>Hello <%= Username %></h2>
        </div>
          <button id="logoutbutton">Logout</button><br>
      <% } else {%>
      <div>
        <label class="">Username:</label>
        <input class = "w3-input" name="username" type="text" id="loginusername" required maxlength="150">
      </div>
      <div>
        <label >Password:</label>
        <input class = "w3-input" name="password" type="password" id="loginpassword" required>
      </div>
        <button id="loginbutton">Login</button>
        <button id="registerbutton">Register</button><br>
      <% }%>
    </div>
</form>


